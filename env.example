# Configuración de Google OAuth
GOOGLE_CLIENT_ID=tu_google_client_id_aqui
GOOGLE_CLIENT_SECRET=tu_google_client_secret_aqui

# Base de datos
MONGO_URI=mongodb://localhost:27017/roomy
# Para producción usar MongoDB Atlas:
# MONGO_URI=mongodb+srv://usuario:password@cluster.mongodb.net/roomy

# JWT
JWT_SECRET=tu_jwt_secret_muy_seguro_aqui
JWT_EXPIRES_IN=24h

# URLs
API_URL=http://localhost:5000
CLIENT_URL=http://localhost:3000
# Para producción:
# API_URL=https://tu-api.herokuapp.com
# CLIENT_URL=https://tu-frontend.vercel.app

# Sesión
SESSION_SECRET=tu_session_secret_aqui

# Entorno
NODE_ENV=development
# Para producción: NODE_ENV=production

# Configuración de cookies (solo para producción)
# COOKIE_DOMAIN=.tu-dominio.com

# Puerto (opcional, por defecto 5000)
PORT=5000 